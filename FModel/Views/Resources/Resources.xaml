                                                                     Storyboard.TargetName="ExpanderRotateTransform"
                                                                     Duration="00:00:0.2"
                                                                     From="-45"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>

                                    <Trigger Property="HasItems" Value="False">
                                        <Setter TargetName="Expander" Property="Visibility" Value="Hidden"/>
                                    </Trigger>

